@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="flex items-center space-x-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="text-gray-500 hover:text-gray-800 text-sm font-medium">Hello @User.Identity?.Name!</a>

        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Management", new { area = "" })" method="post">
            <button type="submit" class="text-gray-500 hover:text-gray-800 text-sm font-medium">Logout</button>
        </form>
    }
    else
    {
        <a class="text-gray-500 hover:text-gray-800 text-sm font-medium" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="text-gray-500 hover:text-gray-800 text-sm font-medium" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>