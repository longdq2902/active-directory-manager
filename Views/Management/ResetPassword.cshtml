@model ADPasswordManager.Models.ViewModels.ResetPasswordViewModel
@{
    // Dùng một layout trống vì trang này sẽ hiển thị trong iframe
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 p-4">
    <div class="w-full">
        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>
            <input type="hidden" asp-for="Username" />

            <div class="mb-4">
                <label asp-for="NewPassword" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="NewPassword" type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="NewPassword" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="ConfirmPassword" type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="mb-4">
                <label class="flex items-center">
                    <input asp-for="SetPasswordNeverExpires" type="checkbox" class="form-checkbox h-5 w-5 text-indigo-600" />
                    <span class="ml-2 text-gray-700">Password never expires</span>
                </label>
            </div>

            <div class="mb-6">
                <label class="flex items-center">
                    <input asp-for="RequirePasswordChangeOnLogon" type="checkbox" class="form-checkbox h-5 w-5 text-indigo-600" />
                    <span class="ml-2 text-gray-700">User must change password at next logon</span>
                </label>
            </div>

            <div class="flex items-center justify-end">
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Update Password
                </button>
            </div>
        </form>
    </div>

    @if (ViewBag.ResetSuccess == true)
    {
        <script>
            // Gửi thông điệp về cho cửa sổ cha
            window.parent.postMessage('resetSuccess', '*');
        </script>
    }

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>