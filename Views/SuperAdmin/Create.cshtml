@model ADPasswordManager.Models.ViewModels.RuleViewModel
@{
    ViewData["Title"] = "Add New Rule";
}

<div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>

    <div class="bg-white shadow-md rounded-lg p-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

            <div class="mb-4">
                <label asp-for="AdminGroup" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="AdminGroup" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="AdminGroup" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ManagedGroups" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <textarea asp-for="ManagedGroups" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" rows="5"></textarea>
                <span asp-validation-for="ManagedGroups" class="text-red-600 text-sm mt-1"></span>
            </div>

            <div class="flex items-center justify-end gap-4">
                <a asp-action="Index" class="text-gray-600 hover:text-gray-800 font-semibold">Cancel</a>
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Create Rule
                </button>
            </div>
        </form>
    </div>
</div>